{
    "name": "vscode-mjml",
    "displayName": "MJML",
    "description": "MJML preview, lint, compile for Visual Studio Code.",
    "version": "0.0.4",
    "publisher": "attilabuti",
    "license": "MIT",
    "readme": "README.md",
    "icon": "images/icon.png",
    "author": {
        "name": "Attila Buti",
        "url": "www.attilabuti.com"
    },
    "homepage": "https://github.com/attilabuti/vscode-mjml#readme",
    "repository": {
        "type": "git",
        "url": "https://github.com/attilabuti/vscode-mjml"
    },
    "bugs": {
        "url": "https://github.com/attilabuti/vscode-mjml/issues"
    },
    "galleryBanner": {
        "color": "#f45e43",
        "theme": "dark"
    },
    "categories": [
        "Other",
        "Linters"
    ],
    "keywords": [
        "vscode",
        "mjml",
        "preview",
        "lint",
        "mail"
    ],
    "engines": {
        "vscode": "^1.6.0"
    },
    "activationEvents": [
        "onCommand:mjml.previewToSide",
        "onCommand:mjml.exportHTML",
        "onLanguage:mjml"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "MJML",
            "properties": {
                "mjml.lintEnable": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable/disable MJML linter (requires restart)"
                },
                "mjml.updateWhenTyping": {
                    "type": "boolean",
                    "default": true,
                    "description": "Update preview when typing"
                },
                "mjml.preserveFocus": {
                    "type": "boolean",
                    "default": true,
                    "description": "Preserve focus of Text Editor after preview open"
                }
            }
        },
        "commands": [
            {
                "command": "mjml.previewToSide",
                "title": "Open Preview to the Side",
                "category": "MJML",
                "icon": {
                    "light": "./media/preview_icon_light.svg",
                    "dark": "./media/preview_icon_dark.svg"
                }
            },
            {
                "command": "mjml.exportHTML",
                "title": "Export HTML",
                "category": "MJML"
            }
        ],
        "languages": [
            {
                "id": "mjml",
                "extensions": [
                    ".mjml"
                ],
                "aliases": [
                    "mjml"
                ]
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "when": "editorLangId == mjml",
                    "command": "mjml.previewToSide",
                    "group": "navigation"
                }
            ],
            "explorer/context": [
                {
                    "when": "editorLangId == mjml",
                    "command": "mjml.previewToSide",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "tslint": "tslint -c tslint.json src/extension.ts"
    },
    "devDependencies": {
        "typescript": "^2.1.4",
        "vscode": "^1.0.3",
        "@types/node": "*"
    },
    "dependencies": {
        "file-url": "^2.0.2",
        "mjml": "^3.3.3"
    }
}
